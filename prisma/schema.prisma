generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MEMBER
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

enum AssetType {
  IMAGE
  FILE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  passwordHash  String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(MEMBER)
  createdAt     DateTime  @default(now())

  accounts    Account[]
  sessions    Session[]
  memberships ProjectMember[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id         String        @id @default(cuid())
  name       String
  status     ProjectStatus @default(ACTIVE)
  clientCode String?       @unique
  clientName String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  steps    Step[]
  members  ProjectMember[]
  comments Comment[]

  @@index([status])
  @@index([clientCode])
}

model ProjectMember {
  id        String   @id @default(cuid())
  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([projectId])
  @@index([userId])
}

model Step {
  id        String   @id @default(cuid())
  projectId String
  title     String
  content   String   @default("")
  order     Int
  updatedAt DateTime @updatedAt

  project    Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assets     Asset[]
  moodboards Moodboard[]

  @@unique([projectId, order])
  @@index([projectId])
}

model Moodboard {
  id        String   @id @default(cuid())
  stepId    String
  name      String   @default("Concept")
  order     Int      @default(0)
  content   String   @default("")
  isLocked  Boolean  @default(false)
  createdAt DateTime @default(now())

  step   Step    @relation(fields: [stepId], references: [id], onDelete: Cascade)
  assets Asset[]

  @@index([stepId])
}

model Asset {
  id          String    @id @default(cuid())
  stepId      String
  moodboardId String?
  type        AssetType
  url         String
  filename    String
  createdAt   DateTime  @default(now())

  // Moodboard positioning (percentage-based for responsive scaling)
  positionX       Float?    @default(0)
  positionY       Float?    @default(0)
  width           Float?    @default(200)
  height          Float?    @default(150)
  rotation        Float?    @default(0)
  zIndex          Int?      @default(1)
  
  // Image description
  description     String?
  showDescription Boolean   @default(false)

  step      Step       @relation(fields: [stepId], references: [id], onDelete: Cascade)
  moodboard Moodboard? @relation(fields: [moodboardId], references: [id], onDelete: SetNull)

  @@index([stepId])
  @@index([moodboardId])
  @@index([type])
}

model Comment {
  id        String   @id @default(cuid())
  projectId String
  stepId    String?
  content   String
  author    String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([stepId])
}
